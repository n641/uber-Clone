<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="30dp"
    android:layout_centerInParent="true"
    android:background="@drawable/ticketbg"
    android:backgroundTint="@color/cardview_dark_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >

            <!--left-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginRight="50dp"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Ansett pioneer"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="italic|bold"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/corner"
                        android:clipToOutline="true"
                        android:scaleType="center"
                        android:src="@drawable/ic_baseline_airline_stops_24" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginHorizontal="5dp"
                            android:text="Melbourne"
                            android:textColor="@color/purpul"
                            android:textSize="18dp"
                            android:textStyle="italic|bold"

                            />

                        <TextView
                            android:id="@+id/DateFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginHorizontal="5dp"
                            android:text="11-Dec-2020"
                            android:textColor="#ff3333"
                            android:textSize="12dp"
                            android:textStyle="italic|bold"

                            />
                    </LinearLayout>

                </LinearLayout>

                <!--right-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/corner"
                        android:clipToOutline="true"
                        android:scaleType="center"
                        android:src="@drawable/ic_baseline_location_on_24" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginHorizontal="5dp"
                            android:text="Melbourne"
                            android:textColor="@color/purpul"
                            android:textSize="18dp"
                            android:textStyle="italic|bold"

                            />

                        <TextView
                            android:id="@+id/Dateto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginHorizontal="5dp"
                            android:text="11-Dec-2020"
                            android:textColor="#ff3333"
                            android:textSize="12dp"
                            android:textStyle="italic|bold"

                            />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="end"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="9:00 AM"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:textStyle="italic|bold"

                    />

                <Button
                    android:id="@+id/buyTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy Ticket"
                    app:cornerRadius="20dp"
                    android:backgroundTint="@color/purpul"
                    android:layout_marginVertical="8dp"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/textPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Price:- "
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textStyle="italic|bold"
                        />
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="30$"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textStyle="italic|bold"
                        />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



